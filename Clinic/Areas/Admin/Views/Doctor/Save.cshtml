@{
    ViewData["Title"] = "Save";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Cloudscribe.Web.Pagination

@model Clinicss.Models.DoctorVm


<partial name="_AlertMessage" />

<div class="container-fluid d-flex align-items-center justify-content-center h-100">
    <div class="container mt-5 glass-container col-md-7">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <h1>Manage Shifts</h1>

                <form asp-action="Save" method="post">
                    <div asp-validation-summary="ModelOnly"></div>


                    @Html.AntiForgeryToken()

                    <div class="form-row form-group col-md-10">
                        <div class="form-control glass-input col-md-4">
                            <label asp-for="Name">  Name:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-control glass-input col-md-4">
                            <label asp-for="Age">Start Shift:</label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="form-control glass-input col-md-4">
                            <label asp-for="Address">End Shift:</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>


                          <div class="form-control glass-input col-md-4">
                            <label asp-for="Specialty">End Shift:</label>
                            <input asp-for="Specialty" class="form-control" />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>
                            <div class="form-control glass-input col-md-4">
                            <label asp-for="NationalID">End Shift:</label>
                            <input asp-for="NationalID" class="form-control" />
                            <span asp-validation-for="NationalID" class="text-danger"></span>
                        </div>   
                        
                        <div class="form-control glass-input col-md-4">
                            <label asp-for="Email">End Shift:</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>  
                        
                        
                        <div class="form-control glass-input col-md-4">
                            <label asp-for="Title">End Shift:</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                           <div class="form-control glass-input col-md-4">
                            <label asp-for="Title">End Shift:</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="PagNumber" class="text-danger"></span>
                        </div> 
                        
                        
                        <div class="form-control glass-input col-md-4">
                            <label asp-for="Salary">End Shift:</label>
                            <input asp-for="Salary" class="form-control" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div> 
                        
                        
                        <div class="form-control glass-input col-md-4">
                            <label asp-for="Birthdate">End Shift:</label>
                            <input asp-for="Birthdate" class="form-control" />
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div> 
                        
                        
                        
                        
                        
                        <div class="form-control glass-input col-md-4">
                            <label asp-for="HiringDate">End Shift:</label>
                            <input asp-for="HiringDate" class="form-control" />
                            <span asp-validation-for="HiringDate" class="text-danger"></span>
                        </div>



                        <div class="form-group col-md-5">
                            <label asp-for="Gender">Gender:</label>
                            <select asp-for="Gender" class="glass-select form-control" asp-items="@Model.listGender">
                                <option value="">Select Gender</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

 


                    </div>

                    <div class="button-group">
                        <button type="submit" class="btn btn-primary">
                            @if (Model != null && Model.Id != null)
                            {
                                <text>Edit</text>
                            }
                            else
                            {
                                <text>Add New</text>
                            }
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <link href="~/css/site.css" rel="stylesheet" />


}
