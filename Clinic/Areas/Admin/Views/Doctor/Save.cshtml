@{
    ViewData["Title"] = "Save";
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Cloudscribe.Web.Pagination

@model Clinicss.Models.DoctorVm

<partial name="_AlertMessage"/>

<div class="container-fluid d-flex align-items-center justify-content-center h-100">
    <div class="container mt-5 glass-container col-md-7">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <h1>Manage  Doctor</h1>

                <form id="saveDoctorForm" asp-action="Save" method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    @Html.AntiForgeryToken()
             
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Name">Name:</label>
                            <input asp-for="Name" class="glass-input  " />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Age">Age:</label>
                            <input asp-for="Age" class="glass-input " />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Address">Address:</label>
                            <input asp-for="Address" class="glass-input  " />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Specialty">Specialty:</label>
                            <input asp-for="Specialty" class="glass-input  " />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="NationalID">NationalID:</label>
                            <input asp-for="NationalID" class="glass-input  " />
                            <span asp-validation-for="NationalID" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" class="glass-input  " />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Title">Title:</label>
                            <input asp-for="Title" class="glass-input  " />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="Salary">Salary:</label>
                            <input asp-for="Salary" class="glass-input  " />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Birthdate">Birthdate:</label>
                            <input asp-for="Birthdate" class="glass-input  " />
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="phonenumber">phonenumber:</label>
                            <input asp-for="phonenumber" class="glass-input  " selected />
                            <span asp-validation-for="phonenumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Gender">Gender:</label>
                            <select asp-for="Gender" class="glass-select  " asp-items="@Model.listGender" selected >
                                <option value="">Select Gender</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="clinicid" class="control-label">Clinic:</label>
                            <div class="input-group">
                                <select asp-for="clinicid" class="glass-select  " asp-items="@Model.ALLclinecs" data-placeholder="Select clinic" selected>
                                    <option value="">Select clinic</option>
                                </select>
                            </div>
                            <span asp-validation-for="clinicid" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="button-group">
                        <button type="submit" class="btn btn-primary mt-4">
                            @if (Model != null || Model.Id == default)
                            {
                                <text>Add New</text>

                            }
                            else
                            {
                                <text>Edit</text>

                            }
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize Select2 on the gender select element
            $('.glass-select').select2();

            // Handle form submission
            $('#saveDoctorForm').submit(function (event) {
                event.preventDefault(); // Prevent default form submission

                // Serialize form data
                var formData = $(this).serialize();

                // Submit form using AJAX
                $.ajax({
                    type: 'POST',
                    url: $(this).attr('action'),
                    data: formData,
                    success: function (data) {
                        // Show success message using SweetAlert
                        swal("Success!", data.message, "success");
                    },
                    error: function (xhr) {
                        // Show error message using SweetAlert
                        swal("Error!", xhr.responseText, "error");
                    }
                });
            });
        });
    </script>
    <link href="~/css/site.css" rel="stylesheet" />
}

